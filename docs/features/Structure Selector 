4.7 State Management
javascriptstoryData.structure = {
  // Guidance level choice (Comprehensive Mode only)
  guidanceLevel: 'deep' | 'light', // null for Quick Mode
  
  // Selected structure
  selected: {
    id: 'herosJourney',
    name: "Hero's Journey",
    category: 'cycle',
    icon: 'ğŸ¦¸',
    difficulty: 'Advanced',
    totalBeats: 12
  },
  
  // User's beat content (for Deep Guidance)
  beats: [
    {
      beatNumber: 1,
      beatName: 'Ordinary World',
      userContent: 'Before we started the company, I was working...',
      aiDraft: '[AI-generated content if requested]',
      isEdited: true,
      completedAt: timestamp,
      wordCount: 87
    },
    // ... all beats
  ],
  
  // AI-generated outline (for Light Guidance)
  aiOutline: {
    generated: true,
    beats: [
      {
        beatName: 'Opening',
        suggestion: 'Start with the moment you realized...',
        duration: '10%'
      }
      // ... simplified beats
    ],
    generatedAt: timestamp
  },
  
  // Selection metadata
  selectedAt: timestamp,
  selectionMethod: 'manual' | 'ai-recommended',
  timeSpentOnStructure: 1240, // seconds
  
  // Completion tracking
  beatsCompleted: 5,
  totalBeats: 12,
  progressPercentage: 42
};
