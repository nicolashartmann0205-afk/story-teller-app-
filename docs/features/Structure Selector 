12.3 State Management Pattern
javascript// In StoryContext
const [storyData, setStoryData] = useState({
  // ... other story data
  structure: {
    guidanceLevel: null,
    selected: null,
    beats: [],
    aiOutline: null,
    selectedAt: null,
    beatsCompleted: 0,
    progressPercentage: 0
  }
});

// Helper functions
const selectStructure = (structure, guidanceLevel) => {
  setStoryData(prev => ({
    ...prev,
    structure: {
      ...prev.structure,
      selected: structure,
      guidanceLevel,
      selectedAt: new Date().toISOString(),
      totalBeats: structure.beats?.length || 0
    }
  }));
};

const updateBeat = (beatNumber, content) => {
  setStoryData(prev => {
    const updatedBeats = [...prev.structure.beats];
    const beatIndex = updatedBeats.findIndex(b => b.beatNumber === beatNumber);
    
    if (beatIndex >= 0) {
      updatedBeats[beatIndex] = {
        ...updatedBeats[beatIndex],
        userContent: content,
        isEdited: true,
        wordCount: content.split(/\s+/).length
      };
    } else {
      updatedBeats.push({
        beatNumber,
        beatName: prev.structure.selected.beats[beatNumber - 1].name,
        userContent: content,
        isEdited: true,
        completedAt: new Date().toISOString(),
        wordCount: content.split(/\s+/).length
      });
    }
    
    const completed = updatedBeats.filter(b => b.userContent?.length > 0).length;
    
    return {
      ...prev,
      structure: {
        ...prev.structure,
        beats: updatedBeats,
        beatsCompleted: completed,
        progressPercentage: Math.round((completed / prev.structure.totalBeats) * 100)
      }
    };
  });
};

const generateAIOutline = async (structure) => {
  const outline = await generateStructureOutline(structure, storyData);
  setStoryData(prev => ({
    ...prev,
    structure: {
      ...prev.structure,
      aiOutline: {
        generated: true,
        beats: outline,
        generatedAt: new Date().toISOString()
      }
    }
  }));
};
12.4 Auto-Save Implementation
javascript// useAutoSave hook
import { useEffect, useRef } from 'react';
import { debounce } from 'lodash';

const useAutoSave = (data, saveFunction, delay = 30000) => {
  const [isSaving, setIsSaving] = useState(false);
  const [lastSaved, setLastSaved] = useState(null);
  
  const debouncedSave = useRef(
    debounce(async (dataToSave) => {
      setIsSaving(true);
      try {
        await saveFunction(dataToSave);
        setLastSaved(new Date());
      } catch (error) {
        console.error('Auto-save failed:', error);
      } finally {
        setIsSaving(false);
      }
    }, delay)
  ).current;

  useEffect(() => {
    if (data) {
      debouncedSave(data);
    }
  }, [data, debouncedSave]);

  return { isSaving, lastSaved };
};

// Usage in BeatEditor
const { isSaving, lastSaved } = useAutoSave(
  storyData.structure,
  saveStoryToDatabase,
  30000 // 30 seconds
);
