4.7 State Management
javascriptstoryData.character = {
  // Primary archetype (required)
  primary: {
    id: 'ruler',
    name: 'The Ruler',
    icon: 'ğŸ‘‘',
    tagline: 'Establish order',
    values: ['order', 'security', 'mastery', 'tradition', 'loyalty'],
    gift: 'Order, security, structure. A goal to follow.',
    darkSides: {
      tooMuch: { name: 'The Tyrant', enabled: false },
      tooLittle: { name: 'The Abdicator', enabled: true }
    }
  },
  
  // Secondary archetype (optional, Comprehensive Mode only)
  secondary: {
    id: 'sage',
    name: 'The Sage',
    icon: 'ğŸ¦‰'
  },
  
  // Combined archetype (auto-generated if secondary exists)
  combined: {
    name: 'The Judge',
    description: 'Wise authority figure who leads through knowledge and fair judgment',
    primaryInfluence: 60, // percentage
    secondaryInfluence: 40
  },
  
  // Character journey (Comprehensive Mode only)
  journey: {
    startArchetype: {
      id: 'ruler',
      state: 'tooLittle', // 'balanced', 'tooMuch', 'tooLittle', or 'different'
      differentArchetype: null // if state is 'different'
    },
    transformation: {
      catalyst: 'Forced to lead after mentor\'s unexpected death',
      keyMoments: [
        'First attempt at leadership fails spectacularly',
        'Gains wisdom from unlikely mentor',
        'Makes tough decision that defines their leadership'
      ]
    },
    endArchetype: {
      id: 'ruler',
      state: 'balanced'
    }
  },
  
  // Selection metadata
  selectionMethod: 'grid' | 'ai-suggested' | 'deep-builder',
  selectedAt: timestamp,
  
  // Quick Mode vs Comprehensive Mode flag
  isSimplified: boolean, // true for Quick Mode
};
