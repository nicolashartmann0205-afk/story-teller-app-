5.2 Archetype Analytics Tracking
sql-- Track archetype selection patterns
CREATE TABLE IF NOT EXISTS archetype_analytics (
  id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
  story_id UUID REFERENCES stories(id) ON DELETE CASCADE,
  user_id UUID REFERENCES users(id),
  primary_archetype TEXT NOT NULL,
  secondary_archetype TEXT,
  story_type TEXT,
  selection_method TEXT CHECK (selection_method IN ('grid', 'ai-suggested', 'deep-builder')),
  has_journey BOOLEAN DEFAULT false,
  has_dark_sides BOOLEAN DEFAULT false,
  created_at TIMESTAMPTZ DEFAULT NOW()
);

-- Indexes for analysis queries
CREATE INDEX idx_archetype_primary ON archetype_analytics(primary_archetype);
CREATE INDEX idx_archetype_story_type ON archetype_analytics(story_type);
CREATE INDEX idx_archetype_method ON archetype_analytics(selection_method);
