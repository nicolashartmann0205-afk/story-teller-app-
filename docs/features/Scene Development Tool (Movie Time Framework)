State Management:
typescript// Scene Context
interface SceneContextType {
  scenes: Scene[];
  currentSceneId: string | null;
  addScene: () => void;
  updateScene: (id: string, updates: Partial<Scene>) => void;
  deleteScene: (id: string) => void;
  reorderScenes: (newOrder: string[]) => void;
  generateSceneContent: (id: string) => Promise<void>;
  analyzeShowDontTell: (id: string) => Promise<void>;
}

// Scene Data Structure
interface Scene {
  id: string;
  story_id: string;
  title: string;
  position: number;
  structure_beat?: string;
  template_type?: string;
  
  movie_time_action: {
    where: string;
    what: string;
    next: string;
    sensory_details: string[];
  };
  
  movie_time_emotion: {
    characters: string;
    stakes: string;
    tone: EmotionalTone;
    internal_feeling?: string;
    external_show?: string;
    audience_feeling?: string;
  };
  
  movie_time_meaning: {
    change: string;
    significance: string;
    takeaway: string;
    purposes: ScenePurpose[];
  };
  
  scene_content?: string;
  ai_draft_versions: string[];
  user_notes?: string;
  
  completeness_status: 'empty' | 'in_progress' | 'complete' | 'drafted';
  show_tell_score?: number;
  last_feedback?: ShowDontTellFeedback;
  
  created_at: string;
  updated_at: string;
}
